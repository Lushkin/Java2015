<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping package="hibernate">
	<class name="Tests" table="Tests">
		<id
			column="Id"
			name="Id"
			type="integer"
		>
			<generator class="increment" />
		</id>
		<property
			column="IsValidated"
			length="1"
			name="IsValidated"
			not-null="true"
			type="boolean"
		 />
		<property
			column="EndDate"
			length="23"
			name="EndDate"
			not-null="true"
			type="timestamp"
		 />
		<property
			column="StartDate"
			length="23"
			name="StartDate"
			not-null="true"
			type="timestamp"
		 />
		<property
			column="Duration"
			length="10"
			name="Duration"
			not-null="false"
			type="integer"
		 />
		<property
			column="Title"
			length="250"
			name="Title"
			not-null="true"
			type="string"
		 />

		<many-to-one
			class="Users"
			name="Author"
			not-null="true"
		>
			<column name="AuthorId" />
		</many-to-one>
		<many-to-one
			class="Subjects"
			name="Subject"
			not-null="true"
		>
			<column name="SubjectId" />
		</many-to-one>
		<set inverse="true" name="StudentAnswersSet">
			<key column="TestId" />
			<one-to-many class="StudentAnswers" />
		</set>
		<set inverse="true" name="UserTestsSet">
			<key column="TestId" />
			<one-to-many class="UserTests" />
		</set>
	</class>
</hibernate-mapping>
